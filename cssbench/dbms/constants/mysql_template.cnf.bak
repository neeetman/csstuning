[mysqld]

# Query and connection settings
long_query_time = 10
max_connections = 500
wait_timeout = 28800
interactive_timeout = 28800
skip-name-resolve = ON
query_cache_limit = 2M
query_cache_size = 32M
query_cache_type = 0
sort_buffer_size = 4M
read_rnd_buffer_size = 1M
join_buffer_size = 1M
tmp_table_size = 32M
max_heap_table_size = 32M

# Thread and table settings
thread_cache_size = 50
table_open_cache = 2000
table_definition_cache = 1400
open_files_limit = 5000

# Binary log and key settings
binlog_cache_size = 32K
key_buffer_size = 128M

# Thread pooling (if applicable)
thread_handling = one-thread-per-connection {one-thread-per-connection, no-threads, loaded-dynamically}
thread_pool_size = 16

# Performance schema
performance_schema = ON

# Galera cluster (if applicable)
innodb_autoinc_lock_mode = 2
binlog_format = ROW {ROW | STATEMENT | MIXED | NDBCLUSTER}

# InnoDB settings
innodb_flush_log_at_trx_commit = 1
innodb_file_per_table = ON
innodb_buffer_pool_size = 1G
innodb_redo_log_capacity = 104857600 [25%_OF_BUFFER_POOL_SIZE]
innodb_log_file_size = 256M
innodb_buffer_pool_instances = 8
innodb_buffer_pool_chunk_size = 134217728
innodb_log_buffer_size = 16M
innodb_stats_on_metadata = OFF
innodb_thread_concurrency = 0
read_buffer_size = 131072
innodb_lock_wait_timeout = 50
